---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const allBlogPosts = await getCollection("blog");

// allBlogPosts.map((blog:CollectionEntry<'blog'>)=> {
//   console.log("-->", blog.data.title)
// })
---

<BaseLayout
  title="Blog"
  description="Latest articles."
  permalink={`${Astro.site!.href}blog`}
  current="blog"
>
  <div class="container">
    <h1>Blog</h1>
    {
      allBlogPosts.map((blog, index) => {
        const href = `/blog/${blog.slug}`;
        return (
          <div>
            {index !== 0 && <hr />}
            <div class="post-item">
              <h2>
                <a href={href}>{blog.data.title}</a>
              </h2>
              <p>{blog.data.desc}</p>
              <div class="post-item-footer">
                <span class="post-item-date">â€” {blog.data.date}</span>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</BaseLayout>

<style>
  h2,
  .post-item-footer {
    font-family: var(--font-family-sans);
    font-weight: 700;
  }

  .post-item-date {
    color: var(--text-secondary);
    text-align: left;
    text-transform: uppercase;
    margin-right: 16px;
  }

  hr {
    margin: 60px auto;
  }
</style>
