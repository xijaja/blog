---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import { config } from "@config";

const permalink = Astro.site!.href;
---

<BaseLayout
  title={config.title}
  description={config.description}
  permalink={permalink}
>
  <div class="home-container">
    <div class="home-copy">
      <h1>Product Manager by day, programmer by night.</h1>
      <p>
        While my day job is as a product manager, I have a deep passion for
        coding. This website is my personal space where I share my coding
        journey and learning experiences.
      </p>
    </div>

    <div class="hero-image-container">
      <picture>
        <!-- <source
          srcset="/assets/young-man-with-laptop.png"
          media="(min-width: 600px)"
        /> -->
        <!-- <img
          class="hero-image"
          alt="image of a young man with a laptop"
          src="/assets/young-man-with-laptop.png"
          width="550"
          height="466"
        /> -->
        <Image
          class="hero-image"
          alt="image of a young man with a laptop"
          src="/assets/young-man-with-laptop.png"
          width="550"
          height="466"
        />
      </picture>

      <p class="caption">
        Illustration by
        <a href="https://icons8.com/illustrations/author/zD2oqC8lLBBA">
          Icons 8
        </a>
        from
        <a href="https://icons8.com/illustrations"> Ouch! </a>
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: 0.8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
